<h2>Search Results for "<%= @query %>"</h2>

<% if @posts.present? %>
  <h3>Posts</h3>
  <% @posts.each do |post| %>
    <p><%= link_to post.title, post %></p>
  <% end %>
<% else %>
  <p>No posts found.</p>
<% end %>

<% if @users.present? %>
  <h3>Users</h3>
  <% @users.each do |user| %>
    <p><%= link_to user.username, user %></p>
  <% end %>
<% else %>
  <p>No users found.</p>
<% end %>
